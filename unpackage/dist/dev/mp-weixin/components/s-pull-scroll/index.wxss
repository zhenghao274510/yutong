.s-pull-scroll .s-pull-scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  margin: 0 auto;
}
.s-pull-scroll .is-fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: auto;
  height: auto;
}
.s-pull-scroll .s-pull-down-wrap,
.s-pull-scroll .s-pull-up-wrap,
