.s-pull-scroll .s-pull-loading-icon {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
  border-radius: 50%;
  border: 2rpx solid #969799;
  border-bottom-color: transparent;
  box-sizing: border-box;
}
.s-pull-scroll .s-pull-loading-icon:first-child {
  margin-right: 16rpx;
}
.s-pull-scroll .s-pull-loading-rotate {
  -webkit-animation: s-pull-loading-rotate 0.6s linear infinite;
