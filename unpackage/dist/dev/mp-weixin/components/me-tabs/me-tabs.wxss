.me-tabs {
  position: relative;
  font-size: 24rpx;
  background-color: #FF4C83;
  box-sizing: border-box;
  overflow-y: hidden;
  box-shadow: 0px 16rpx 49rpx 0px rgba(167, 167, 167, 0.13);
}
.me-tabs.tabs-fixed {
  z-index: 9999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.me-tabs .tabs-item {
  position: relative;
  white-space: nowrap;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.me-tabs .tabs-item .tab-item {
  position: relative;
  text-align: center;
  box-sizing: border-box;
}
.me-tabs .tabs-item .tab-item.active {
  font-weight: bold;
  font-size: 30rpx;
}
.me-tabs .tabs-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.me-tabs .tabs-flex .tab-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #FFE8EF;
}
.me-tabs .tabs-scroll .tab-item {
  display: inline-block;
  color: #FFE8EF;
}
.me-tabs .tabs-line {
  z-index: 1;
  position: absolute;
  bottom: 10rpx;
  width: 100rpx;
  height: 2rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  border-radius: 4rpx;
  -webkit-transition: left .3s;
  transition: left .3s;
  background: #72BFFA;
}

